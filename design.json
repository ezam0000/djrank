{
  "meta": {
    "name": "DJRank",
    "description": "Mobile-first dark glass tier ranking app for DJs",
    "theme": "dark_glass"
  },
  "breakpoints": {
    "mobile": 360,
    "tablet": 768,
    "desktop": 1280
  },
  "tokens": {
    "colors": {
      "backgroundBase": "#0B0F14",
      "glassPanel": "rgba(17, 23, 33, 0.72)",
      "glassBorder": "rgba(142, 197, 255, 0.35)",
      "accentPrimary": "#4C7DFF",
      "accentSecondary": "#8A82FF",
      "textPrimary": "#F5F7FA",
      "textSecondary": "#B7C4D6",
      "success": "#3DD598",
      "warning": "#FFC542",
      "error": "#FF5757"
    },
    "typography": {
      "heading": {
        "fontFamily": "Space Grotesk",
        "weights": {
          "regular": 400,
          "medium": 500,
          "bold": 700
        }
      },
      "body": {
        "fontFamily": "Inter",
        "weights": {
          "regular": 400,
          "medium": 500
        }
      }
    },
    "effects": {
      "glassBlur": "backdrop-blur(18px)",
      "glassShadow": "0 12px 40px rgba(5, 8, 12, 0.55)",
      "focusRing": "0 0 0 2px rgba(76, 125, 255, 0.45)"
    },
    "radii": {
      "panel": 20,
      "card": 18,
      "chip": 12,
      "button": 12
    },
    "spacing": {
      "xs": 4,
      "sm": 8,
      "md": 16,
      "lg": 24,
      "xl": 32
    }
  },
  "screens": [
    {
      "id": "select_djs",
      "title": "Select Your Favorite DJs",
      "layout": {
        "type": "stack",
        "padding": "lg",
        "background": "backgroundBase"
      },
      "components": [
        {
          "type": "header",
          "variant": "glass",
          "title": "Select Your Favorite DJs",
          "subtitle": "Browse and add DJs to build your ranking list",
          "actions": [
            {
              "type": "iconButton",
              "icon": "help_circle",
              "tooltip": "How ranking works"
            }
          ]
        },
        {
          "type": "searchBar",
          "placeholder": "Search DJs by name or genre",
          "hasVoiceIcon": true,
          "filters": {
            "type": "chipGroup",
            "chips": [
              { "id": "las_vegas", "label": "Las Vegas" },
              { "id": "los_angeles", "label": "Los Angeles" },
              { "id": "new_york", "label": "New York" },
              { "id": "house", "label": "House" },
              { "id": "techno", "label": "Techno" },
              { "id": "hip_hop", "label": "Hip-Hop" }
            ]
          }
        },
        {
          "type": "djGrid",
          "columns": {
            "mobile": 2,
            "tablet": 3,
            "desktop": 4
          },
          "card": {
            "style": "glass",
            "imageRatio": "3:4",
            "badges": [
              {
                "type": "text",
                "field": "residency"
              }
            ],
            "actions": [
              {
                "type": "toggle",
                "defaultLabel": "Add",
                "activeLabel": "Added"
              }
            ]
          }
        },
        {
          "type": "bottomBar",
          "stickTo": "bottom",
          "content": [
            {
              "type": "text",
              "binding": "selectedCount",
              "prefix": "Selected: "
            },
            {
              "type": "primaryButton",
              "label": "Start Ranking",
              "state": "disabledWhenNone"
            }
          ]
        }
      ]
    },
    {
      "id": "tier_ranking",
      "title": "Rank Your DJs",
      "layout": {
        "type": "split",
        "direction": {
          "desktop": "row",
          "mobile": "column"
        },
        "background": "backgroundBase"
      },
      "components": [
        {
          "type": "queueDrawer",
          "position": {
            "desktop": "left",
            "mobile": "top"
          },
          "title": "Unplaced",
          "cardStyle": "glassCompact",
          "interactions": {
            "dragHandle": true,
            "longPress": true
          }
        },
        {
          "type": "tierGraph",
          "orientation": "horizontal",
          "tiers": [
            {
              "id": "S",
              "label": "S",
              "description": "Superb",
              "accent": "accentPrimary"
            },
            { "id": "A", "label": "A", "description": "Amazing" },
            { "id": "B", "label": "B", "description": "Brilliant" },
            { "id": "C", "label": "C", "description": "Capable" },
            { "id": "D", "label": "D", "description": "Developing" },
            { "id": "E", "label": "E", "description": "Emerging" },
            { "id": "F", "label": "F", "description": "Fallback" }
          ],
          "card": {
            "style": "glass",
            "imageRatio": "1:1",
            "statusIcons": true,
            "openModalAction": "doubleTap"
          },
          "spacing": {
            "rowGap": "md",
            "columnGap": "md"
          }
        }
      ]
    }
  ],
  "components": {
    "modal": {
      "id": "djDetailModal",
      "style": "glassElevated",
      "width": {
        "mobile": "90%",
        "desktop": 520
      },
      "sections": [
        {
          "type": "heading",
          "titleBinding": "djName",
          "subtitleBinding": "tierLabel"
        },
        {
          "type": "textArea",
          "label": "Explain your ranking",
          "placeholder": "Share why this DJ belongs in this tier",
          "minRows": 4,
          "helperText": "280 character minimum",
          "characterCounter": true
        },
        {
          "type": "fileUpload",
          "label": "Upload supporting image",
          "accept": ["image/jpeg", "image/png"],
          "maxSizeMB": 5,
          "preview": true
        },
        {
          "type": "fileUpload",
          "label": "Upload supporting video",
          "accept": ["video/mp4", "video/mov"],
          "maxSizeMB": 50,
          "preview": true,
          "alternative": {
            "type": "textField",
            "label": "Video URL",
            "placeholder": "https://"
          }
        },
        {
          "type": "linkFields",
          "links": [
            {
              "id": "spotify",
              "label": "Spotify",
              "placeholder": "Spotify artist URL"
            },
            {
              "id": "apple_music",
              "label": "Apple Music",
              "placeholder": "Apple Music artist URL"
            },
            {
              "id": "soundcloud",
              "label": "SoundCloud",
              "placeholder": "SoundCloud artist URL"
            }
          ]
        }
      ],
      "actions": [
        {
          "type": "secondaryButton",
          "label": "Cancel"
        },
        {
          "type": "destructiveButton",
          "label": "Remove Entry",
          "visibleWhen": "hasExistingData"
        },
        {
          "type": "primaryButton",
          "label": "Save",
          "state": "disabledUntilValid"
        }
      ],
      "transitions": {
        "mobile": "slideUp",
        "desktop": "scaleFade"
      }
    }
  }
}
